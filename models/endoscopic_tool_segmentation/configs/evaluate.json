{
    "validate#postprocessing": {
        "_target_": "Compose",
        "transforms": [
            {
                "_target_": "Invertd",
                "keys": [
                    "pred",
                    "label"
                ],
                "transform": "@validate#preprocessing",
                "orig_keys": "image",
                "nearest_interp": [
                    false,
                    true
                ],
                "to_tensor": true
            },
            {
                "_target_": "AsDiscreted",
                "keys": [
                    "pred",
                    "label"
                ],
                "argmax": [
                    true,
                    false
                ],
                "to_onehot": 2
            },
            {
                "_target_": "SaveImaged",
                "_disabled_": true,
                "keys": "pred",
                "output_dir": "@output_dir",
                "output_ext": ".png",
                "resample": false,
                "squeeze_end_dims": true
            }
        ]
    },
    "validate#handlers": [
        {
            "_target_": "CheckpointLoader",
            "load_path": "$@ckpt_dir + '/model.pt'",
            "load_dict": {
                "model": "@network"
            },
            "map_location": "@device"
        },
        {
            "_target_": "StatsHandler",
            "iteration_log": false
        },
        {
            "_target_": "MetricsSaver",
            "save_dir": "@output_dir",
            "metrics": [
                "val_iou",
                "val_mean_dice"
            ],
            "metric_details": [
                "val_iou",
                "val_mean_dice"
            ],
            "batch_transform": "$lambda x: [xx['image'].meta for xx in x]",
            "summary_ops": "*"
        }
    ],
    "run": [
        "$@validate#evaluator.run()"
    ]
}
